<footer id="footer">
  <div class="outer">
    <div id="footer-info">
    	<div class="footer-left">
    		&copy; <%= date(new Date(), 'YYYY') %> <%= config.author || config.title %>
    	</div>
      <% if (theme.visit_counter.on) { %>
              <div class="visit" style="display: none;">
                  <% if (theme.visit_counter.site_visit && theme.visit_counter.page_visit) { %>

                    <span id="busuanzi_container_site_uv"> 
                          <%= theme.visit_counter.site_visit %>:<span id="busuanzi_value_site_uv"></span>,
                    </span>

                    <span id="busuanzi_container_page_pv">
                      <%= theme.visit_counter.page_visit %>: 
                      <span id="busuanzi_value_page_pv"></span>
                    </span>


                  <% } %>
      
             </div>
          <% } %>
      	<div class="footer-right">
      		<a href="http://hexo.io/" target="_blank">Hexo</a>  Theme <a href="https://github.com/litten/hexo-theme-yilia" target="_blank">Yilia</a> by Litten
      	</div>
    </div>
  </div>
</footer>